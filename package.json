{
    "name": "inline-text-editor",
    "version": "1.0.0",
    "main": "dist/inline-text-editor.umd.js",
    "module": "dist/inline-text-editor.esm.js",
    "unpkg": "dist/inline-text-editor.min.js",
    "browser": {
        "./sfc": "src/inline-text-editor.vue"
    },
    "scripts": {
        "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
        "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/inline-text-editor.umd.js",
        "build:es": "rollup --config build/rollup.config.js --format es --file dist/inline-text-editor.esm.js",
        "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/inline-text-editor.min.js"
    },
    "devDependencies": {
        "rollup": "^0.57.1",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-vue": "^3.0.0",
        "sass-loader": "^7.1.0",
        "vue": "^2.1.0",
        "vue-template-compiler": "^2.5.16"
    }
}
